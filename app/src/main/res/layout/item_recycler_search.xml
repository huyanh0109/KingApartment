<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/padding_xlarge"
    android:background="@drawable/shape_line_bottom"
    android:paddingBottom="@dimen/_4dp"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_detail_search"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_detail_search_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="15"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/padding_small"
        android:text="Time City"
        android:textSize="@dimen/text_size_normal"
        android:layout_marginTop="@dimen/padding_normal"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:textColor="@color/textcolor_black"
/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_detail_search_address"
        android:layout_width="@dimen/_230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_tiny_small"
        android:layout_marginLeft="@dimen/padding_small"
        android:text="Hai Bà Trưng,Hà Nội"
        android:ellipsize="end"
        android:fontFamily="@font/source_sans_pro"
        android:textSize="@dimen/text_size_setting_tiny"
        android:maxLines="2"
        android:textColor="@color/text_color_light" />
    </LinearLayout>
</LinearLayout>