<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scroll_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/cons_bottom_detail">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_detail_apartment"
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:src="@drawable/img_intro"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_detail_apartment_createby"
                android:layout_width="65dp"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/padding_normal"
                android:layout_marginLeft="@dimen/padding_large"
                android:gravity="center"
                android:fontFamily="@font/source_sans_pro"
                android:textColor="@color/textcolor_blue_blod"
                android:background="@drawable/shape_button_cancel"
                android:textSize="@dimen/text_size_setting_tiny"
                android:text="Cao cấp"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_wishlist_detail"
                android:layout_width="@dimen/size_icon_large"
                android:layout_height="@dimen/size_icon_normal"
                android:layout_marginRight="@dimen/padding_large_xlarge"
                android:layout_marginTop="@dimen/padding_large_xlarge"
                android:src="@drawable/ic_wishlist_add"
                android:layout_marginLeft="@dimen/padding_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_detail_apartment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:maxLines="1"
                android:layout_marginLeft="@dimen/padding_large"
                android:text="Time City"
                android:textSize="@dimen/text_size_middle_large"
                android:layout_marginTop="@dimen/padding_normal"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:textColor="@color/textcolor_black"
                app:layout_constraintTop_toBottomOf="@id/tv_rcv_description"
                app:layout_constraintStart_toStartOf="parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_large"
                android:layout_marginRight="@dimen/padding_small"
                android:paddingTop="@dimen/padding_normal"
                android:paddingBottom="@dimen/padding_normal"
                android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_location"
                android:layout_gravity="center"
                android:layout_width="@dimen/size_icon_normal"
                android:layout_height="@dimen/size_icon_normal"
                android:layout_marginTop="@dimen/padding_tiny_small"
                android:src="@drawable/ic_location"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_rcv_name" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_detail_apartment_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_tiny_small"
                android:layout_marginRight="@dimen/padding_large"
                android:text="Hai Bà Trưng,Hà Nội"
                android:ellipsize="end"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:textSize="@dimen/text_size_setting_tiny"
                android:maxLines="2"
                android:textColor="@color/text_color_light"
                app:layout_constraintTop_toBottomOf="@id/tv_rcv_name"
                app:layout_constraintLeft_toRightOf="@id/ic_location" />
            </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_tiny_small"
        android:layout_marginLeft="@dimen/padding_large"
        android:layout_marginRight="@dimen/padding_large"
        android:paddingBottom="@dimen/padding_large"
        android:gravity="center"
        android:background="@drawable/shape_line_bottom"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_bed"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_detail_apartment_bed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_normal"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_black_xtiny_"
            android:layout_marginLeft="@dimen/padding_tiny_small"
            android:layout_gravity="center"
            android:text="4 giường"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_shower"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_detail_apartment_shower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_normal"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_black_xtiny_"
            android:layout_marginLeft="@dimen/padding_tiny_small"
            android:layout_gravity="center"
            android:text="2 nhà tắm"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_square"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_detail_apartment_square"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_black_xtiny_"
            android:layout_marginLeft="@dimen/padding_tiny_small"
            android:layout_gravity="center"
            android:text="128m2"/>
    </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_detail_title_desciption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:layout_marginLeft="@dimen/padding_large"
                android:text="@string/detail_apartment_overview"
                android:textSize="@dimen/text_size_middle_large"
                android:layout_marginTop="@dimen/padding_normal"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:textColor="@color/text_color_black_xtiny_"
                app:layout_constraintTop_toBottomOf="@id/tv_rcv_description"
                app:layout_constraintStart_toStartOf="parent" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_detail_apartment_desciption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_large"
                android:layout_marginTop="@dimen/padding_normal"
                android:layout_marginRight="@dimen/padding_large"
                android:text="Hai Bà Trưng,Hà Nội lorem Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."
                android:ellipsize="end"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_color_light"
                app:layout_constraintTop_toBottomOf="@id/tv_rcv_name"
                app:layout_constraintLeft_toRightOf="@id/ic_location" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title_apartment_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:layout_marginLeft="@dimen/padding_large"
                android:text="@string/detail_apartment_album"
                android:textSize="@dimen/text_size_middle_large"
                android:layout_marginTop="@dimen/padding_normal"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:textColor="@color/text_color_black_xtiny_"
                app:layout_constraintTop_toBottomOf="@id/tv_rcv_description"
                app:layout_constraintStart_toStartOf="parent" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_detail_listimage"
                android:layout_margin="@dimen/padding_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_title_apartment_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:layout_marginLeft="@dimen/padding_large"
                android:text="@string/detail_apartment_location"
                android:textSize="@dimen/text_size_middle_large"
                android:layout_marginTop="@dimen/padding_normal"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:textColor="@color/text_color_black_xtiny_"
                app:layout_constraintTop_toBottomOf="@id/tv_rcv_description"
                app:layout_constraintStart_toStartOf="parent" />
            <androidx.cardview.widget.CardView
                android:layout_margin="@dimen/padding_large"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:cardCornerRadius="24dp"
                android:orientation="vertical">
            <com.google.android.gms.maps.MapView
                android:id="@+id/map_apartment"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="160dp" />
            </androidx.cardview.widget.CardView>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginBottom="@dimen/padding_large_xlarge"
                android:id="@+id/tv_title_apartment_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="15"
                android:layout_marginLeft="@dimen/padding_large"
                android:text="@string/detail_apartment_features"
                android:textSize="@dimen/text_size_middle_large"
                android:layout_marginTop="@dimen/padding_normal"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:textColor="@color/text_color_black_xtiny_"
                app:layout_constraintTop_toBottomOf="@id/tv_rcv_description"
                app:layout_constraintStart_toStartOf="parent" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_large">
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/cons_gl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.65"/>
                <TextView
                    android:id="@+id/tv_detail_status"
                    android:layout_margin="@dimen/padding_tiny_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang cho thuê"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_black_tiny"
                    app:layout_constraintStart_toEndOf="@+id/cons_gl"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_detail_square"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tình Trạng"
                    android:layout_margin="@dimen/padding_tiny_small"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_black_tiny"
                    android:id="@+id/tv_detail_status_result"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_detail_square_result"/>
                />
                <TextView
                    android:id="@+id/tv_detail_square"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="128 m2"
                    android:layout_margin="@dimen/padding_tiny_small"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_black_tiny"
                    app:layout_constraintStart_toEndOf="@+id/cons_gl"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_status"
                    app:layout_constraintBottom_toTopOf="@+id/tv_detail_style"/>
                <TextView
                    android:id="@+id/tv_detail_square_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diện tích"
                    android:layout_margin="@dimen/padding_tiny_small"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_black_tiny"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_detail_status_result"
                    app:layout_constraintBottom_toTopOf="@id/tv_detail_style_result"/>
                <TextView
                    android:id="@+id/tv_detail_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chung cư"
                    android:layout_margin="@dimen/padding_tiny_small"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_black_tiny"
                    app:layout_constraintStart_toEndOf="@+id/cons_gl"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_square"
                    app:layout_constraintBottom_toTopOf="@+id/tv_detail_year"/>
                <TextView
                    android:id="@+id/tv_detail_style_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kiểu nhà"
                    android:layout_margin="@dimen/padding_tiny_small"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_black_tiny"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_detail_square_result"
                    app:layout_constraintBottom_toTopOf="@id/tv_detail_year_result"/>
                <TextView
                    android:id="@+id/tv_detail_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019"
                    android:layout_margin="@dimen/padding_tiny_small"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_black_tiny"
                    app:layout_constraintStart_toEndOf="@+id/cons_gl"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_style"
                    app:layout_constraintBottom_toTopOf="@+id/tv_detail_type"/>
                <TextView
                    android:id="@+id/tv_detail_year_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Năm xây dựng"
                    android:layout_margin="@dimen/padding_tiny_small"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_black_tiny"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_detail_style_result"
                    app:layout_constraintBottom_toTopOf="@id/tv_detail_type_result"/>
                <TextView
                    android:id="@+id/tv_detail_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hiện Đại"
                    android:layout_margin="@dimen/padding_tiny_small"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_black_tiny"
                    app:layout_constraintStart_toEndOf="@+id/cons_gl"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_year"
                    app:layout_constraintBottom_toTopOf="@+id/tv_detail_policy"/>
                <TextView
                    android:id="@+id/tv_detail_type_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phong cách"
                    android:layout_margin="@dimen/padding_tiny_small"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_black_tiny"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_detail_year_result"
                    app:layout_constraintBottom_toTopOf="@id/tv_detail_policy_result"/>
                <TextView
                    android:id="@+id/tv_detail_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đầy đủ"
                    android:layout_margin="@dimen/padding_tiny_small"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_black_tiny"
                    app:layout_constraintStart_toEndOf="@+id/cons_gl"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_type"
                                    app:layout_constraintBottom_toTopOf="@+id/tv_detail_area"/>
                <TextView
                    android:id="@+id/tv_detail_policy_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pháp lí"
                    android:layout_margin="@dimen/padding_tiny_small"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_black_tiny"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_detail_type_result"
                                    app:layout_constraintBottom_toTopOf="@id/tv_detail_area_result"/>
                <TextView
                    android:id="@+id/tv_detail_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đô thị"
                    android:layout_margin="@dimen/padding_tiny_small"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_black_tiny"
                    app:layout_constraintStart_toEndOf="@+id/cons_gl"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_detail_policy"
                                    app:layout_constraintBottom_toTopOf="parent"/>
                <TextView
                    android:id="@+id/tv_detail_area_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khu vực"
                    android:layout_margin="@dimen/padding_tiny_small"
                    android:fontFamily="@font/source_sans_pro_bold"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_black_tiny"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_detail_policy_result"
                                    app:layout_constraintBottom_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:id="@+id/none"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:orientation="vertical" />
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/cons_bottom_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_line_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_large_xlarge"
            android:layout_marginLeft="@dimen/padding_large_xlarge"
            android:text="@string/detail_apartment_price"
            android:textColor="@color/text_month"
            android:textSize="@dimen/text_size_setting_tiny"
            android:fontFamily="@font/source_sans_pro_semibold"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_detail_apartment_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_large_xlarge"
            android:text="18,00tr"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:textColor="@color/textcolor_blue_blod"
            android:textSize="@dimen/text_size_large"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_apartment_month"
            android:textColor="@color/text_month"
            android:textSize="@dimen/text_size_normal"
            android:fontFamily="@font/source_sans_pro_semibold"
            />
        </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_detail_contact"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginTop="@dimen/padding_large_xlarge"
            android:layout_width="@dimen/button_size_weight_normal"
            android:layout_height="@dimen/button_size_height"
            android:background="@drawable/shape_button_gradient"
            android:text="@string/detail_apartment_contactnow"
            android:textAllCaps="false"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:textColor="@color/textcolor_white"
            android:textSize="@dimen/text_size_normal_tiny"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>